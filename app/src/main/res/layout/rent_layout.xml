<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RentActivity">

    <ImageButton
        android:id="@+id/btnback"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/backbutton"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:foreground="@drawable/rounded_rect_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnlogout"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logoutbutton"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewSearch"
        android:layout_width="432dp"
        android:layout_height="81dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="SEARCH"
        android:background="#D3D3D3"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDescriptor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="OR: Article or Zipcode:"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerFilter" />

    <EditText
        android:id="@+id/editTextUserInput"
        android:layout_width="253dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFE0"
        android:ems="10"
        android:gravity="center"
        android:foreground="@drawable/rounded_rect_border"

        android:hint="Hammer  /  10711"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescriptor" />

    <Spinner
        android:id="@+id/spinnerFilter"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFE0"
        android:padding="8dp"
        android:foreground="@drawable/rounded_rect_border"

        android:entries="@array/disctricts_array"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSearch"
         />

    <Button
        android:id="@+id/btngo"
        android:layout_width="120dp"
        android:layout_height="63dp"
        android:layout_marginTop="56dp"
        android:gravity="center"

        android:text="GO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserInput" />

</androidx.constraintlayout.widget.ConstraintLayout>